datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  phone        String?
  role         String   @default("user") // admin, user
  images       Image[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Image {
  id         String     @id @default(cuid())
  type       String     // satellite, drone
  filePath   String
  uploaderId String?
  uploader   User?      @relation(fields: [uploaderId], references: [id])
  analyses   Analysis[]
  createdAt  DateTime   @default(now())
}

model Analysis {
  id                String   @id @default(cuid())
  imageId           String
  image             Image    @relation(fields: [imageId], references: [id])
  ndwiImagePath     String?
  flowPathImagePath String?
  waterPixels       Float?
  volumeEstimateM3  Float?
  createdAt         DateTime @default(now())
}

model Otp {
  id         String   @id @default(cuid())
  identifier String
  code       String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}
